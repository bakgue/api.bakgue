extends ../base/base
include ../components/subject-cards
include ../components/page-top

block content
  +pageTop(`Edit : ${ass.title}`)

  .ass-edit
    if errorMessage
      span#errorMessage=errorMessage  
    //- Edit Section
    form.ass-edit__form(method="POST")#flowForm
      .flow-form__element
        label(for="content") Content
        textarea(id="content", name="content", required)=ass.content
        .flow-form__element__flow-btn
          input(type="button", value="Back")#flowBack
          input(type="button", value="Next")#flowNext
      .flow-form__element
        .ass-edit__form__element__title
          label(for="title") Title
          input(type="text", name="title", id="title", value=ass.title, required)
        .ass-edit__form__element__subject
          +subjectOptions(ass.subject)

        .ass-edit__form__element__submit
          input(type="submit", value="Save Changes!").submit-btn

block scripts
  script(src="/static/js/flowForm.js") 
