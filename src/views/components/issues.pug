mixin issues(issue)
  #issue(data-id=issue._id)
    .issue__top
      .issue__top__owner
        span=issue.owner.number
        span=issue.owner.name
      .issue__top__separator
        span | 
      .issue__top__created-at
      - const goodTimeFormat = new Date(issue.createdAt).toString().substring(0, 10);
      span=goodTimeFormat

    .issue__main
      .issue__main__content
        p=issue.content

      .issue__main__emotion
        if issue.emotion.selected.great == true
          .issue__emotion.selected#emoji(data-type="great")
            .issue__emotion__emoji
              span 👍
            .issue__emotion__num
              span=issue.emotion.great.length
        else
          .issue__emotion#emoji(data-type="great")
            .issue__emotion__emoji
              span 👍
            .issue__emotion__num
              span=issue.emotion.great.length
        
        if issue.emotion.selected.heart == true
          .issue__emotion.selected#emoji(data-type="heart")
            .issue__emotion__emoji
              span ❤️ 
            .issue__emotion__num
              span=issue.emotion.heart.length
        else
          .issue__emotion#emoji(data-type="heart")
            .issue__emotion__emoji
              span ❤️ 
            .issue__emotion__num
              span=issue.emotion.heart.length

        if issue.emotion.selected.smile == true
          .issue__emotion.selected#emoji(data-type="smile")
            .issue__emotion__emoji
              span 😃
            .issue__emotion__num
              span=issue.emotion.smile.length
        else
          .issue__emotion#emoji(data-type="smile")
            .issue__emotion__emoji
              span 😃
            .issue__emotion__num
              span=issue.emotion.smile.length

mixin notIssuesFound()
  #issue
    .issue__main
      .issue__content__no
        p Here is no issues! Start issues with a comment.

mixin createIssues()
  form#createIssue(method="POST", action="/api/assignment/issues/create")
    .create-issue__top
      .create-issue__top__owner
        span=loggedInUser.number
        span=loggedInUser.name
      .create-issue__top__separator
        span | 
      .create-issue__top__created-at
        span 지금 이 순간

    .create-issue__mid
      textarea(type="text", name="content", required=true, placeholder=`이 과제에 대해서 틀린 부분이 있거나 궁금한 점이 있다면, 이 이슈를 만들어 질문하세요!`)#issueContent
    
    .create-issue__bottom
      input(type="submit", value="Send Issues").submit-btn#createIssueBtn
